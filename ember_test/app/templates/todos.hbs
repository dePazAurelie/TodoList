<header class="center-align">
  <h1>Your to-do Lists</h1>
</header>
<section>
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card">
        <div class="card-content">
          <span class="card-title center-align">Your To-do-List :</span>
          <div class="card-action center-align">
            <p>New To-do :</p>

            <div class="row">
              {{add-todo}}
            </div>
          </div>
          <ul class="collection">
            {{#each model as |todo|}}
              <li class="collection-item">
                <div>
                  <span class="">{{todo.id}}.</span> {{todo.text}}
                  <a href="#" class="secondary-content">
                    <i class="material-icons" id="edit">
                      edit
                    </i>
                  </a>
                  <a href="#" class="secondary-content" id="delete">
                    <i class="material-icons">
                      delete
                    </i>
                  </a>
                </div>
              </li>
            {{/each}}
          </ul>
        </div>
        <div class="card-action right-align">
          <button class="btn red accent-1">Save your To-do-List</button>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="center-align">
  <button class="btn">Add List</button>
</section>
<footer>
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/js/materialize.min.js"></script>
</footer>